# Enterprise Dashboard Environment Variables
# Copy this to .env file and update with your values

# SECURITY (REQUIRED)
SECRET_KEY=your-super-secret-key-change-this-in-production-very-long-string
DEBUG=False

# DATABASE CONFIGURATION (REQUIRED)
DB_NAME=enterprise_dashboard
DB_USER=enterprise_user
DB_PASSWORD=your-secure-database-password
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://enterprise_user:your-secure-database-password@postgres:5432/enterprise_dashboard

# REDIS CONFIGURATION
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# CORS SETTINGS (Update with your domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# ALLOWED HOSTS (Update with your domain)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# FRONTEND API URLS
FRONTEND_API_URL=https://api.yourdomain.com/api
ANGULAR_URL=https://yourdomain.com
REACT_URL=https://analytics.yourdomain.com

# PORTS
HTTP_PORT=80
HTTPS_PORT=443
BACKEND_PORT=8000
ANGULAR_PORT=80
REACT_PORT=4201
DB_PORT=5432
REDIS_PORT=6379

# MONITORING (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your-secure-grafana-password

# EMAIL CONFIGURATION (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# JWT SETTINGS
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# LOGGING
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# STATIC FILES
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media